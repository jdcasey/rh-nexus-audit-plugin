<?xml version="1.0"?>
<security>
  <version>2.0.3</version>
  <roles>
    <role>
      <id>developer</id>
      <roles>
        <role>capture-external-user</role>
      </roles>
    </role>
    <role>
        <id>developer-no-capture</id>
        <name>Nexus Developer Role, No Capture</name>
        <description>Developer role for Nexus WITHOUT access to capture functions.</description>
        <sessionTimeout>30</sessionTimeout>
        <privileges />
        <roles>
            <role>ui-basic</role>
            <role>deployment</role>
        </roles>
    </role>
    <role>
      <id>capture-user</id>
      <name>Capture Session User</name>
      <description>Allow access to a capture session</description>
      <sessionTimeout>5</sessionTimeout>
      <privileges>
        <privilege>capture-access</privilege>
      </privileges>
    </role>
    <role>
      <id>capture-external-user</id>
      <name>Capture Session External User</name>
      <description>Allow access to a external repositories from a capture session</description>
      <sessionTimeout>5</sessionTimeout>
      <privileges>
        <privilege>capture-access</privilege>
        <privilege>capture-external-resolve</privilege>
        <privilege>capture-log-access</privilege>
      </privileges>
    </role>
    <role>
      <id>capture-admin</id>
      <name>Capture Sessions Administrator</name>
      <description>Maintain capture session configurations, logs, etc.</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>capture-access</privilege>
        <privilege>capture-external-resolve</privilege>
        <privilege>capture-log-access</privilege>
        <privilege>capture-admin</privilege>
      </privileges>
    </role>
  </roles>
  <privileges>
    <privilege>
      <id>capture-access</id>
      <type>method</type>
      <name>Capture Repository: access</name>
      <description>Access to capture repositories.</description>
      <properties>
        <property>
          <key>method</key>
          <value>read</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:capture-access</value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>capture-external-resolve</id>
      <type>method</type>
      <name>Capture Repository: external access</name>
      <description>Access to external repositories from a capture session.</description>
      <properties>
        <property>
          <key>method</key>
          <value>read</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:capture-external-resolve</value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>capture-log-access</id>
      <type>method</type>
      <name>Capture Session: Log Access</name>
      <description>Access to view/maintain your own capture-session logs.</description>
      <properties>
        <property>
          <key>method</key>
          <value>create,read,update,delete</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:capture-log</value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>capture-admin</id>
      <type>method</type>
      <name>Capture Session: Administration</name>
      <description>Access to configure/maintain capture-session functions.</description>
      <properties>
        <property>
          <key>method</key>
          <value>create,read,update,delete</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:capture-admin</value>
        </property>
      </properties>
    </privilege>
  </privileges>
</security>